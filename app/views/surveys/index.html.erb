<h1>View <%= pluralize(@surveys.count, "Survey") %></h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @surveys.each do |survey| %>
		<tr>
			<td><%= survey.survey_name %></td>
			<td>
				<a href="/surveys/<%= survey.id %>">View</a> |
				<a href="/surveys/<%= survey.id %>">Create</a> |
				<a href="/surveys/<%= survey.id %>">Respond</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="surveys/new">Create Surveys</a>